<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context=".AnswerQuestionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_group_therapy_bro" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        style="@style/parent"
                        android:textSize="30dp"
                        android:text="QUESTIONS"
                        />
                    <TextView
                        android:layout_marginTop="100dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkTextColor"
                        android:textStyle="bold"
                        style="@style/parent"
                        android:text="1.Avez vous des problèmes de santé ?"/>


                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_happy"
                            />
                        <ImageButton
                            android:layout_marginLeft="50dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_neutre"/>

                        <ImageButton
                            android:layout_marginLeft="50dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_cc"/>

                    </LinearLayout>





                    <TextView
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkTextColor"
                        android:textStyle="bold"
                        style="@style/parent"
                        android:text="2.Avez vous des problèmes avec quelq'un de votre famille ?"/>


                    <LinearLayout
                        android:layout_marginTop="15dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_happy"/>
                        <ImageButton
                            android:layout_marginLeft="50dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_neutre"/>

                        <ImageButton
                            android:layout_marginLeft="50dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_cc"/>

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkTextColor"
                        android:textStyle="bold"
                        style="@style/parent"
                        android:text="3.Avez vous des problèmes de .. ?"/>


                    <LinearLayout
                        android:layout_marginTop="15dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_marginLeft="20dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_happy"/>
                        <ImageButton
                            android:layout_marginLeft="50dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_neutre"/>

                        <ImageButton
                            android:layout_marginLeft="50dp"
                            android:layout_width="50dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_cc"/>

                    </LinearLayout>


                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/suivantAnswerQuestion"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="70dp"
                        android:text="Suivant"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="2dp"
                        app:spinning_bar_width="2dp"
                        />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
